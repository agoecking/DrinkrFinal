@model PadraoCadastro

<h1>Login</h1>

@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    <fieldset>

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @if (@ViewBag.Message != null)
        {
            <div style="border: 1px solid red">
                @ViewBag.Message
            </div>
        }
    <table>
        <tr>
            <td>@Html.LabelFor(a => a.Email)</td>
            <td>@Html.TextBoxFor(a => a.Email)</td>
            <td>@Html.ValidationMessageFor(a => a.Email)</td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(a => a.Password)
            </td>
            <td>
                @Html.PasswordFor(a => a.Password)
            </td>
            <td>
                @Html.ValidationMessageFor(a => a.Password)
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" class="btn btn-dark btn-sm" value="Login" role="button" />
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <a class="btn btn-dark btn-sm" asp-action="CreateUsuarios" role="button">Criar Usuario</a>
            </td>
        </tr>
    </table>
    </fieldset>
}  