@model Corrida

<div class="card border-primary" style="max-width: 100%;">
    <div class="card-header">
        <h4 class="card-text">Acompanhar Corrida</h4>
    </div>
    <div class="card-body">
        <div class="card border-secondary p-3">
            <div class="card-header">
                <h6 class="card-text">Detalhes</h6>
            </div>
            <div class="row">
                <label class="ml-3">Origem:</label>
                <div class="col">
                    <text>@Model.Origem</text>
                </div>
            </div>
            <div class="row">
                <label class="ml-3">Destino:</label>
                <div class="col">
                    <text>@Model.Destino</text>
                </div>
            </div>
            <div class="row">
                <label class="ml-3">Data:</label>
                <div class="col">
                    <text>@Model.DataCorrida</text>
                </div>
            </div>
        </div>
        <div></div>

        <div class="card border-warning p-3">
            <div class="card-header">
                <h6 class="card-text">Motorista</h6>
            </div>
            <div class="row">
                <label class="ml-3">Nome:</label>
                <div class="col">
                    <text>@Model.Motorista.Nome</text>
                </div>
            </div>
            <div class="row">
                <label class="ml-3">Telefone:</label>
                <div class="col">
                    <text>@Model.Motorista.Telefone</text>
                </div>
            </div>
        </div>
        <p></p>
        <div>
                <a class="btn btn-dark btn-sm" asp-action="UserDashboard">Finalizar</a>
        </div>
    </div>
</div>