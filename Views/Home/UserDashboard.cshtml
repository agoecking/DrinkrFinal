<div class="card border-primary" style="max-width: 100%;">
    <div class="card-header">
        <h5 class="card-text">Solicitar Corrida</h5>
    </div>
    <div class="card-body">
        <form class="form" asp-action="AcompanharCorrida">
            <div class="form-group row">
                <label for="origem" class="col-form-label">Origem:</label>
                <div class="col">
                    <input type="text" name="origem" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label for="destino" class="col-form-label">Destino:</label>
                <div class="col">
                    <input type="text" name="destino" class="form-control" />
                </div>
            </div>
            <button type="submit">Solicitar</button>
        </form>
    </div>
</div>
