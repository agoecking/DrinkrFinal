@model Drinkr.Models.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Home Page";
}
<text>
    Welcome @ViewData["Nome"] 
</text>
    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
        <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    </div>

    <p>
        <a asp-action="CreateCarroes">Registrar Carro</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Carro.FirstOrDefault().Modelo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Carro.FirstOrDefault().Marca)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Carro.FirstOrDefault().Placa)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Carro.FirstOrDefault().Cor)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Carro)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Modelo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Marca)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Placa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cor)
                    </td>
                    <td>
                        <a asp-action="DeleteCarroes" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

