<div class="card text-white bg-dark mb-3" style="max-width: 100%;">
    <div class="card-header">Carros</div>
    <div class="card-body">

        <table class="table text-white">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Carro.FirstOrDefault().Modelo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Carro.FirstOrDefault().Marca)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Carro.FirstOrDefault().Placa)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Carro.FirstOrDefault().Cor)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Carro)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Modelo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Marca)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Placa)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cor)
                        </td>
                        <td>
                            <a asp-action="DeleteCarroes" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<p>
    <a asp-action="CreateEnderecoes">Registrar Endereço</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Endereco.FirstOrDefault().Cep)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco.FirstOrDefault().Rua)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco.FirstOrDefault().Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco.FirstOrDefault().Bairro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco.FirstOrDefault().Cidade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Endereco)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cep)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rua)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Numero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bairro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cidade)
                </td>
                <td>
                    <a asp-action="DeleteEnderecoes" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

